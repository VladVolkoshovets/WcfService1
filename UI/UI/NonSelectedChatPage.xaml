<Page x:Class="UI.NonSelectedChatPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NonSelectedChatPage">

    <Grid>
        <TextBlock Background="{StaticResource primary_dark}"  ToolTip="You have to choose or create a chat" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="18,0" FontSize="16" >
                <Label Foreground="{StaticResource icons}" Content="Select chat"></Label>
        </TextBlock>
    </Grid>
</Page>
